#!/usr/bin/env ruby

require_relative '../config/environment'

 puts "Welcome to Tic Tac Toe!"
 puts "How many players?"
 puts "Type 0 for the computer to play itself."
 puts "Type 1 to play the computer."
 puts "Type 2 to play a friend."

 input = gets.chomp

 def set_one_player_game
   puts "Choose your token. Type X or O"
   input = gets.chomp
   if input == "X"
     Game.new(Players::Human.new("X"), Players::Computer.new("O"), Board.new).play
   else
     Game.new(Players::Human.new("O"), Players::Computer.new("X"), Board.new).play
   end
 end

 case input
   when "0"
     Game.new(Players::Computer.new("X"), Players::Computer.new("O"), Board.new).play
   when "1"
     set_one_player_game
   when "2"
     puts "Player one is 'X' \nPlayer two is 'O'"
     game = Game.new
     game.board.display
     game.play
 end
